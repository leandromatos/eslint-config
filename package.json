{
  "name": "@leandromatos/eslint-config",
  "version": "3.0.0-rc.19",
  "repository": "https://github.com/leandromatos/eslint-config",
  "author": "Leandro Matos",
  "license": "MIT",
  "keywords": [
    "eslint",
    "config"
  ],
  "files": [
    "lib/**",
    "LICENSE"
  ],
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "scripts": {
    "build": "yarn clean:build && yarn compile && yarn resolve-alias",
    "clean:build": "rm -rf lib/*",
    "resolve-alias": "tsc-alias",
    "compile": "tsc",
    "lint:fix": "yarn build && yarn lint --fix",
    "lint": "yarn build && eslint .",
    "prepare": "husky",
    "prepublishOnly": "yarn build"
  },
  "dependencies": {
    "@eslint/js": "^9.12.0",
    "@typescript-eslint/eslint-plugin": "^8.8.1",
    "@typescript-eslint/parser": "^8.8.1",
    "eslint": "^9.12.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.37.1",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.8",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.8.1"
  },
  "devDependencies": {
    "@types/eslint": "^9.6.1",
    "@types/eslint__eslintrc": "^2.1.2",
    "@types/eslint__js": "^8.42.3",
    "@types/lint-staged": "^13.3.0",
    "@types/node": "^22.7.5",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "tsc-alias": "^1.8.10"
  },
  "peerDependencies": {
    "eslint": ">=9"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": false
    }
  }
}
