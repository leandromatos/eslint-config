{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "newLine": "lf",
    "outDir": "./lib",
    "paths": {
      "@/*": ["./src/*"]
    },
    "skipLibCheck": true,
    "strict": true,
    "target": "ESNext"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["lib", "node_modules"],
  "tsc-alias": {
    "verbose": false,
    "resolveFullPaths": true
  }
}
